<div id="main">
  <div class="container">
  <div class="main-header">
    <h1 class="text-center">Article List</h1>
 
    <%= link_to 'New article', new_article_path, class: 'btn btn-primary btn-lg' %>

  </div>
  <div class="clear"></div>
  
       <div class="row">   
         <% @articles.each do |article| %>

        <div class="col-md-4">
          <div class="box">
            <h3><%= article.title %></h3>
            <!-- truncate("And they found that many people were sleeping better.", length: 25, omission: '... (continued)') -->
            <p><%= truncate(article.text, length: 100, omission: '...') %></p>
            <hr />
            <%= link_to '<i class="fa fa-book" aria-hidden="true"></i>'.html_safe, article_path(article), class: 'btn' %>
            <%= link_to '<i class="fa fa-pencil" aria-hidden="true"></i>'.html_safe, edit_article_path(article), class: 'btn' %>
            <%= link_to '<i class="fa fa-trash" aria-hidden="true"></i>'.html_safe, article_path(article),
                    method: :delete,
                    data: { confirm: 'Are you sure?' }, class: 'btn' %>
          </div>
          
        </div>   
 

      <% end %>
     </div>
  </div>
</div>
